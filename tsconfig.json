{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es2019",
		"lib": ["ES2019"],
		"outDir": "dist",
		"rootDir": "src",
		"sourceMap": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"alwaysStrict": true,
		"removeComments": true
	},
	"exclude": [
		"node_modules",
		".vscode-test"
	]
}